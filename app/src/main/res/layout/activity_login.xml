<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background">

    <LinearLayout
        android:id="@+id/login_user_password_layout"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/login_user_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:id="@+id/login_user_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/login_user" />

            <TextView
                android:id="@+id/login_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/login_user_img"
                android:text=""
                android:textSize="16sp" />

            <EditText
                android:id="@+id/login_user_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@+id/login_user_text"
                android:hint="请输入警号..."
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/login_pwd_edit"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_pwd_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_pwd_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/login_pwd" />

            <TextView
                android:id="@+id/login_pwd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/login_pwd_img"
                android:text=""
                android:textSize="16sp" />

            <EditText
                android:id="@+id/login_pwd_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:imeOptions="actionDone"
                android:nextFocusForward="@+id/login_btn"
                android:layout_toRightOf="@+id/login_pwd_text"
                android:hint="请输入密码..."
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/login_pwd_show_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_user_password_layout"
        android:background="@drawable/finger_btn_background"
        android:layout_centerInParent="true"
        android:text="登 录 系 统"
        android:visibility="visible"
        android:textColor="@color/blue_drak" />

</RelativeLayout>